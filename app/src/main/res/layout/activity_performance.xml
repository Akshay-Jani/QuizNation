<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:text="Correct"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/correctcount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/correct"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:background="@android:color/holo_green_dark"
        android:text="num"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="134dp" />

    <TextView
        android:id="@+id/incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="147dp"
        android:text="Incorrect"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/incorrectcount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/incorrect"
        android:layout_alignStart="@+id/correctcount"
        android:background="@android:color/holo_red_dark"
        android:text="num"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/correctcount" />

    <TextView
        android:id="@+id/finalResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:text=""
        android:textSize="36sp"
        android:textColor="#000000"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/detana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finalResult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:text="Click here for detailed analysis"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>